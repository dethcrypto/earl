{
  "name": "earl-monorepo",
  "private": true,
  "engines": {
    "node": ">=10",
    "pnpm": "^6"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "pnpm --parallel --aggregate-output --reporter append-only --filter ./packages lint",
    "format": "pnpm --parallel --aggregate-output --reporter append-only --filter ./packages format",
    "format:fix": "pnpm --parallel --aggregate-output --reporter append-only --filter ./packages format:fix",
    "typecheck": "pnpm --parallel --aggregate-output --reporter append-only --filter ./packages typecheck",
    "clean": "pnpm --parallel --aggregate-output --reporter append-only --filter ./packages clean",
    "build": "pnpm --filter=!website build",
    "build:website": "pnpm --filter=website build",
    "test": "pnpm --parallel --aggregate-output --reporter append-only --filter ./packages test",
    "test:fix": "pnpm --parallel --aggregate-output --reporter append-only --filter ./packages test:fix",
    "release": "pnpm --filter ./packages clean && pnpm changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.19.0",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^8.0.3",
    "@types/node": "^13.13.0",
    "@types/sinon-chai": "^3.2.4",
    "@typescript-eslint/eslint-plugin": "4.15.1",
    "@typescript-eslint/parser": "4.15.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "conditional-type-checks": "^1.0.5",
    "cross-spawn-with-kill": "^1.0.0",
    "eslint": "^7.29.0",
    "eslint-config-typestrict": "^1.0.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.8.0-125",
    "eslint-plugin-tsdoc": "^0.2.11",
    "eslint-plugin-unused-imports": "^1.1.1",
    "fast-check": "^2.19.0",
    "mocha": "8.2.1",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "sinon": "^8.0.1",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.5.4",
    "typescript": "^4.6",
    "uvu": "^0.5.3"
  },
  "resolutions": {
    "prettier": "^2.5.0"
  }
}
