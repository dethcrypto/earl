{
  "name": "earl-monorepo",
  "private": true,
  "engines": {
    "node": ">=10",
    "yarn": "^1.17.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "wsrun -mc lint",
    "format": "wsrun -mc format",
    "format:fix": "wsrun -mc format:fix",
    "typecheck": "wsrun -mc typecheck",
    "clean": "wsrun -emc clean",
    "build": "wsrun -temc build",
    "build:noweb": "wsrun -x website -temc build",
    "test": "wsrun -emc test",
    "test:fix": "wsrun -emc test:fix",
    "release": "wsrun -smec release"
  },
  "devDependencies": {
    "@changesets/cli": "^2.11.2",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^8.0.3",
    "@types/node": "^13.13.0",
    "@types/sinon-chai": "^3.2.4",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-typestrict": "^1.0.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unused-imports": "^0.1.2",
    "mocha": "^8.2.1",
    "prettier": "^2.2.0",
    "sinon": "^8.0.1",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.8.3",
    "wsrun": "^5.2.1"
  }
}
