{
  "name": "earljs",
  "description": "Ergonomic, modern and type-safe assertion library",
  "keywords": [
    "assertions",
    "modern",
    "mocha",
    "chai",
    "jest",
    "typescript"
  ],
  "repository": "git@github.com:krzkaczor/earl.git",
  "author": "Kris Kaczor <chris@kaczor.io>",
  "license": "MIT",
  "version": "0.0.13",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "mocha.js",
    "dist/**/*"
  ],
  "scripts": {
    "start": "ts-node -T ./src/index.ts",
    "format": "prettier --check \"./**/*.{ts,md}\"",
    "format:fix": "prettier --write \"./**/*.{ts,md}\"",
    "lint": "eslint --ext .ts src test",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build": "tsc -p ./tsconfig.prod.json",
    "build:watch": "tsc -p ./tsconfig.prod.json --watch",
    "build:watch:tests": "tsc -p ./tsconfig.json --watch",
    "test": "mocha --config ./test/.mocharc.js",
    "test:fix": "yarn lint:fix && yarn format:fix && yarn test && yarn typecheck",
    "prepublishOnly": "yarn lint && yarn format && yarn test && yarn typecheck && yarn build"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "lines-and-columns": "^1.1.6",
    "lodash": "^4.17.15",
    "pretty-format": "^26.1.0",
    "stacktracey": "^1.2.127",
    "ts-essentials": "^6.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.150",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.13.0",
    "@types/sinon-chai": "^3.2.4",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.12.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-typestrict": "^1.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unused-imports": "^0.1.2",
    "mocha": "^6.2.2",
    "prettier": "^2.0.5",
    "sinon": "^8.0.1",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.8.3"
  }
}
