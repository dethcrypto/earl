{
  "name": "@earljs/ethereum-plugin",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./types.d.ts",
  "files": [
    "dist",
    "./types.d.ts"
  ],
  "scripts": {
    "start": "ts-node -T ./src/index.ts",
    "format": "prettier --ignore-path ../../.prettierignore --check .",
    "format:fix": "prettier --ignore-path ../../.prettierignore --write .",
    "lint": "eslint --ext .ts src",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist && rimraf tsconfig.prod.tsbuildinfo",
    "build": "pnpm clean && tsc -p ./tsconfig.prod.json",
    "test": "mocha",
    "test:fix": "pnpm lint:fix && pnpm format:fix && pnpm typecheck && pnpm test",
    "codegen": "typechain --target=ethers-v5 --out-dir ./test/fixtures/generated ./test/fixtures/Events/*.json",
    "postinstall": "pnpm codegen"
  },
  "peerDependencies": {
    "earljs": "workspace:^0.2.3",
    "ethers": "^5.6.1"
  },
  "devDependencies": {
    "@dethcrypto/eth-sdk": "^0.3.1",
    "@ethereum-waffle/provider": "^3.2.1",
    "@ethersproject/providers": "^5",
    "@ethersproject/abi": "^5",
    "@types/fs-extra": "^9.0.13",
    "earljs": "workspace:^0.2.3",
    "ethers": "^5.6.1",
    "fs-extra": "^10.0.0",
    "p-wait-for": "^3.1.0",
    "typescript": "^4.5",
    "@typechain/ethers-v5": "^10.0.0",
    "typechain": "^8.0.0"
  }
}
