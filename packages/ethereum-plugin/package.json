{
  "name": "@earljs/ethereum-plugin",
  "version": "0.2.2",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./types.d.ts",
  "files": [
    "dist",
    "./types.d.ts"
  ],
  "scripts": {
    "start": "ts-node -T ./src/index.ts",
    "format": "prettier --ignore-path ../../.prettierignore --check .",
    "format:fix": "prettier --ignore-path ../../.prettierignore --write .",
    "lint": "eslint --ext .ts src",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "build": "yarn clean && tsc -p ./tsconfig.build.json",
    "test": "mocha",
    "test:fix": "yarn lint:fix && yarn format:fix && yarn typecheck && yarn test"
  },
  "devDependencies": {
    "earljs": "*",
    "ethers": "^5.6.1",
    "typescript": "^4.5"
  },
  "peerDependencies": {
    "earljs": "^0.2.2",
    "ethers": "^5.6.1"
  },
  "dependencies": {
    "@ethereum-waffle/provider": "^3.4.4"
  }
}
