{
  "name": "@earl/api-reference-generator",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "./dist/index.js",
  "bin": "./dist/cli.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "format": "prettier --ignore-path ../../.prettierignore --check .",
    "format:fix": "prettier --ignore-path ../../.prettierignore --write .",
    "lint": "eslint --ext .ts src test",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist *.tsbuildinfo",
    "build": "pnpm clean && tsc -p ./tsconfig.prod.json",
    "build:watch": "pnpm clean && tsc -p ./tsconfig.prod.json --watch",
    "build:watch:test": "pnpm clean && tsc -p ./tsconfig.json --watch",
    "test": "mocha",
    "test:fix": "pnpm lint:fix && pnpm format:fix && pnpm typecheck && pnpm test"
  },
  "dependencies": {
    "@microsoft/tsdoc": "^0.14.2",
    "@ts-morph/bootstrap": "^0.18.0",
    "earljs": "workspace:^0.2.3",
    "fast-glob": "^3.2.12",
    "ts-command-line-args": "^2.4.2",
    "ts-essentials": "^9.3.1",
    "ts-morph": "^17.0.1"
  },
  "devDependencies": {
    "@earljs/published": "npm:earljs@^0.2.3",
    "@types/command-line-usage": "^5.0.2",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.191",
    "lodash": "^4.17.21",
    "rimraf": "^4.4.0",
    "typescript": "^4.9.5"
  }
}
